{
    "name": "silicon/framework",
    "description": "A minimal and powerful PHP framework for building fast, modern HTTP services.",
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Silicon\\": "src/Silicon/"
        },
        "files": [
            "src/Silicon/Kernel/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Mathias Soto"
        }
    ],
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3.10",
        "respect/validation": "^2.4"
    },
    "require-dev": {
        "filp/whoops": "^2.18",
        "friendsofphp/php-cs-fixer": "^3.94"
    },
    "scripts": {
        "dev": "php -S localhost:8000 -t public",
        "fix": "php-cs-fixer fix",
        "fix:dry": "php-cs-fixer fix --dry-run --diff"
    }
}
